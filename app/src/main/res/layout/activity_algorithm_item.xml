<android.support.v7.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccent"
    android:elevation="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/alg_item_image"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:text="Image"
            />

        <TextView
            android:id="@+id/alg_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/alg_item_image"
            android:text="Algorithm name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/alg_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alg_item_title"
            android:layout_toEndOf="@+id/alg_item_image"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="Algoritm"
            android:layout_centerVertical="true"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/alg_item_onclick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/alg_item_image"
            android:layout_below="@+id/alg_item_description"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:textSize="12dp"

            />
    </RelativeLayout>
</android.support.v7.widget.CardView>