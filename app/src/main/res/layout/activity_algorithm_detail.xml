<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlgorithmDetail">

    <RelativeLayout
        android:id="@+id/algorithm_detail_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/algorithm_detail_title"
            style="@style/Title"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
             />

        <ImageView
            android:id="@+id/algorithm_detail_image"
            android:layout_marginTop="40dp"
            android:layout_width="120dp"
            android:layout_height="120dp"

            android:layout_centerHorizontal="true"
            android:layout_below="@+id/algorithm_detail_title"/>

        <ListView
            android:id="@+id/algorithm_detail_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/algorithm_detail_image"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="15dp"
            android:divider="@null"
            android:dividerHeight="20dp"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>