<android.support.v7.widget.CardView
    android:layout_height="50dp"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cfop_item_image"
            android:layout_marginVertical="20dp"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/cfop_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cfop_item_image"
            android:text="Title"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cfop_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cfop_item_title"
            android:layout_toEndOf="@+id/cfop_item_image"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="6dp"
            android:text="Description"
            android:layout_centerVertical="true"
            android:textSize="18dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>